[Unit]
Description=FastAPI application
After=network.target

[Service]
Type=notify
User=www
Group=www
WorkingDirectory=/home/www/curtains/OfficeCurtains
Environment="PATH=/home/www/.local/bin:/usr/bin"
ExecStart=/home/www/.local/bin/gunicorn -k uvicorn.workers.UvicornWorker -w 4 -b 127.0.0.1:8000 server:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
